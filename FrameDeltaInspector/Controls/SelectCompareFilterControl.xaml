<UserControl x:Class="FrameDeltaInspector.Controls.SelectCompareFilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FrameDeltaInspector.Controls"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="600"
             MinHeight="20" Height="Auto" MaxHeight="40"
             MinWidth="150" Width="Auto" MaxWidth="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <ComboBox Grid.Column="0" x:Name="ComboBoxFilter">
            <!-- Placeholder for ComboBox items -->
        </ComboBox>
        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Button Padding="10, 2" x:Name="button_MoveUp" Content="▲" Click="Button_MoveUp_Click"/>
            <Button Padding="10, 2" x:Name="button_MoveDown" Content="▼" Click="Button_MoveDown_Click"/>
            <Button Padding="10, 2" x:Name="button_Edit" Content="🖊️" />
        </StackPanel>
    </Grid>
</UserControl>
