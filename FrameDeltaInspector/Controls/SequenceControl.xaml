<UserControl x:Class="FrameDeltaInspector.Controls.SequenceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FrameDeltaInspector.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Delta Frame -->
        <Border Grid.Row="1"  Grid.Column="1" BorderBrush="Black" BorderThickness="1" Margin="5">
            <Image Name="FrameImage" Stretch="Uniform" />
        </Border>
    </Grid>
</UserControl>
